@using BabyCare.Web.Dtos.AboutDto
@model List<ResultAboutDto>

<div class="container mt-4">
    <h2 class="text-primary border-bottom pb-2 mb-4">Hakkımızda Bilgileri</h2>

    <table class="table table-hover table-bordered align-middle">
        <thead class="table-light">
            <tr class="text-center">
                <th>#</th>
                <th>Resim</th>
                <th>Video</th>
                <th>Başlık</th>
                <th>Özellikler</th>
                <th>Açıklama</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center fw-bold">@i</td>

                        <td class="text-center">
                            <img src="@item.ImageUrl" alt="Resim" class="img-thumbnail" width="100" />
                        </td>

                        <td class="text-center">
                            <a href="@item.VideoUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-play-circle"></i> İzle
                            </a>
                        </td>

                        <td>@item.Title</td>

                        <td>
                            <ul class="list-unstyled mb-0">
                                @if (!string.IsNullOrEmpty(item.Titles1))
                                {
                                    <li><i class="bi bi-check-circle text-success me-1"></i> @item.Titles1</li>
                                }
                                @if (!string.IsNullOrEmpty(item.Titles2))
                                {
                                    <li><i class="bi bi-check-circle text-success me-1"></i> @item.Titles2</li>
                                }
                                @if (!string.IsNullOrEmpty(item.Titles3))
                                {
                                    <li><i class="bi bi-check-circle text-success me-1"></i> @item.Titles3</li>
                                }
                                @if (!string.IsNullOrEmpty(item.Titles4))
                                {
                                    <li><i class="bi bi-check-circle text-success me-1"></i> @item.Titles4</li>
                                }
                                @if (!string.IsNullOrEmpty(item.Titles5))
                                {
                                    <li><i class="bi bi-check-circle text-success me-1"></i> @item.Titles5</li>
                                }
                                @if (!string.IsNullOrEmpty(item.Titles6))
                                {
                                    <li><i class="bi bi-check-circle text-success me-1"></i> @item.Titles6</li>
                                }
                            </ul>
                        </td>

                        <td>@item.Description</td>

                        <td class="text-end">
                            <a href="@Url.Action("UpdateAbout", "About", new { area = "Admin", id = item.AboutId })"
                               class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> Güncelle
                            </a>

                            <a href="@Url.Action("DeleteAbout", "About", new { area = "Admin", id = item.AboutId })"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?');">
                                <i class="bi bi-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>
