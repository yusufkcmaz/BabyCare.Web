

@model BabyCare.Web.Dtos.AboutDto.UpdateAboutDto

@{
    ViewData["Title"] = "Hakkımızda Güncelle";
}

<div class="container mt-4">
    <h2 class="text-primary border-bottom pb-2 mb-4">Hakkımızda Güncelle</h2>

    <form asp-action="UpdateAbout" method="post" class="row g-3">
        <input type="hidden" asp-for="AboutId" />

        <div class="col-md-6">
            <label asp-for="Title" class="form-label">Başlık</label>
            <input asp-for="Title" class="form-control" placeholder="Başlık girin" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="VideoUrl" class="form-label">Video URL</label>
            <input asp-for="VideoUrl" class="form-control" placeholder="Video bağlantısı" />
            <span asp-validation-for="VideoUrl" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Description" class="form-label">Açıklama</label>
            <textarea asp-for="Description" rows="4" class="form-control" placeholder="Açıklama girin"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="ImageUrl" class="form-label">Resim URL</label>
            <input asp-for="ImageUrl" class="form-control" placeholder="Resim bağlantısı" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="col-12 mt-4">
            <h5 class="text-secondary">Öne Çıkan Özellikler</h5>
        </div>

        <div class="col-md-4">
            <label asp-for="Titles1" class="form-label">Özellik 1</label>
            <input asp-for="Titles1" class="form-control" placeholder="Özellik 1" />
        </div>

        <div class="col-md-4">
            <label asp-for="Titles2" class="form-label">Özellik 2</label>
            <input asp-for="Titles2" class="form-control" placeholder="Özellik 2" />
        </div>

        <div class="col-md-4">
            <label asp-for="Titles3" class="form-label">Özellik 3</label>
            <input asp-for="Titles3" class="form-control" placeholder="Özellik 3" />
        </div>

        <div class="col-md-4">
            <label asp-for="Titles4" class="form-label">Özellik 4</label>
            <input asp-for="Titles4" class="form-control" placeholder="Özellik 4" />
        </div>

        <div class="col-md-4">
            <label asp-for="Titles5" class="form-label">Özellik 5</label>
            <input asp-for="Titles5" class="form-control" placeholder="Özellik 5" />
        </div>

        <div class="col-md-4">
            <label asp-for="Titles6" class="form-label">Özellik 6</label>
            <input asp-for="Titles6" class="form-control" placeholder="Özellik 6" />
        </div>

        <div class="col-12 mt-3">
            <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-save"></i> Güncelle
            </button>
        </div>
    </form>
</div>
