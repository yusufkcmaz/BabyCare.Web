

@model BabyCare.Web.Dtos.BannerDto.CreateBannerDto

@{
    ViewData["Title"] = "Yeni Banner Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<div class="container mt-4">
    <h2 class="fw-bold mb-4">Yeni Banner Ekle</h2>

    <form asp-action="AddBanner" method="post" class="shadow-sm p-4 rounded bg-light">
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Başlık</label>
            <input asp-for="Title" class="form-control" placeholder="Başlık giriniz">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Açıklama</label>
            <textarea asp-for="Description" rows="3" class="form-control" placeholder="Açıklama giriniz"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label">Resim URL</label>
            <input asp-for="ImageUrl" class="form-control" placeholder="Resim URL giriniz">
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end">
            <a asp-action="Index" class="btn btn-secondary me-2">İptal</a>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>
