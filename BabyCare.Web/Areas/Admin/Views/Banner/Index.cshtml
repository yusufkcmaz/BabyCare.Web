

@model List<BabyCare.Web.Dtos.BannerDto.ResultBannerDto>

@{
    ViewData["Title"] = "Banner Yönetimi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">Banner Yönetimi</h2>
        <a href="@Url.Action("AddBanner", "Banner", new { area = "Admin" })" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Yeni Banner Ekle
        </a>
    </div>

    <div class="table-responsive shadow-sm">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th>Resim</th>
                    <th class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    int count = 1;
                    foreach (var banner in Model)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@banner.Title</td>
                            <td>@banner.Description</td>
                            <td>
                                <img src="@banner.ImageUrl" alt="Banner Resim" width="120" class="img-thumbnail">
                            </td>
                            <td class="text-end">
                                <a href="@Url.Action("UpdateBanner", "Banner", new { area = "Admin", id = banner.BannerId })" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Güncelle
                                </a>
                                <a href="@Url.Action("DeleteBanner", "Banner", new { area = "Admin", id = banner.BannerId })"
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Bu bannerı silmek istediğinize emin misiniz?');">
                                    <i class="bi bi-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                        count++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            Henüz bir banner eklenmemiş.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
