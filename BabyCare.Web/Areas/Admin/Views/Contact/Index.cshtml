@using BabyCare.Web.Dtos.ContactDtos
@model IEnumerable<ResultContactDto>

@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<div class="container mt-4">
    <h2 class="text-primary border-bottom pb-2 mb-4">İletişim Bilgileri</h2>

    <table class="table table-hover table-bordered align-middle">
        <thead class="table-light">
            <tr class="text-center">
                <th>#</th>
                <th>Açıklama</th>
                <th>Başlık</th>
                <th>Adres</th>
                <th>Telefon</th>
                <th>Email</th>
                <th>Harita</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center fw-bold">@i</td>

                        <td>@item.Description</td>


                        <td>@item.Title</td>


                        <td>@item.Adress</td>

                        <td>
                            <a href="tel:@item.PhoneNum" class="text-decoration-none">@item.PhoneNum</a>
                        </td>

                        <td>
                            <a href="mailto:@item.Email" class="text-decoration-none">@item.Email</a>
                        </td>

                        <td>
                            <a href="@item.MapUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-map"></i> Gör
                            </a>
                        </td>

                        <td class="text-end">
                            <a href="@Url.Action("UpdateContact", "Contact", new { area = "Admin", id = item.ContactId })"
                               class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> Güncelle
                            </a>
                            <a href="@Url.Action("DeleteContact", "Contact", new { area = "Admin", id = item.ContactId })"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Bu iletişim bilgisini silmek istediğinize emin misiniz?');">
                                <i class="bi bi-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>
