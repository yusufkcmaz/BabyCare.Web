@using BabyCare.Web.Dtos.EventDtos
@model List<ResultEventDto>

@{
    ViewData["Title"] = "Etkinlik Yönetimi";
}

<div class="container mt-4">

    <h2 class="fw-bold mb-3">Etkinlik Yönetimi</h2>

    <a href="@Url.Action("AddEvent", "Event", new { area = "Admin" })" class="btn btn-primary mb-3">
        <i class="bi bi-plus-circle"></i> Yeni Etkinlik Ekle
    </a>

    <div class="table-responsive shadow-sm">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>Etkinlik Tarihi</th>
                    <th>Etkinlik Adı</th>
                    <th>Görsel</th>
                    <th>Açıklama</th>
                    <th>İşlemler</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EventId</td>
                        <td>@item.Title</td>
                        <td>@item.Eventdate.ToString("dd.MM.yyyy")</td>
                        <td>@item.EventName</td>
                        <td>
                            <img src="@item.Imageurl" alt="Etkinlik Görseli" width="80" height="60" style="object-fit: cover;" />
                        </td>
                        <td>@item.Description</td>
                        <td>
                            <a href="@Url.Action("UpdadeEvent", "Event", new { area = "Admin", id = item.EventId })"
                               class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil"></i> Güncelle
                            </a>

                            <a href="@Url.Action("DeleteEvent", "Event", new { area = "Admin", id = item.EventId })"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Bu etkinliği silmek istediğinize emin misiniz?');">
                                <i class="bi bi-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>e
        </table>
    </div>
</div>
