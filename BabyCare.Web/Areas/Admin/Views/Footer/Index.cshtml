@using BabyCare.Web.Dtos.LayoutInfoDtos
@model List<ResultLayoutInfoDto>
@{
    ViewData["Title"] = "Footer Düzeni";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<div class="container mt-4">

    <h2 class="fw-bold mb-3">Footer Yönetimi</h2>

    <a href="@Url.Action("CreateFooter", "Footer", new { area = "Admin" })" class="btn btn-primary mb-3">
        <i class="bi bi-plus-circle"></i> Footer ekle
    </a>

    <div class="table-responsive shadow-sm">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Konum</th>
                    <th>Açıklama</th>
                    <th>Telefon Numarası</th>
                    <th>Mail</th>
                    <th>Servis Hizmetleri</th>
                    <th>Haftasonu Saati</th>
                    <th>Haftaiçi Saati</th>
                    <th>Facebook Url</th>
                    <th>X Url</th>
                    <th>İnstagram Url</th>
                    <th>LinkedIn Url</th>
                   
                  
                    <th>İşlemler</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>#</td>
                        <td>@item.Location</td>
                        <td>@item.Description</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Email</td>
                        <td>@item.Service</td>
                        <td>@item.WeekdayHours</td>
                        <td>@item.SaturdayHours</td>
                        <td>@item.FacebookUrl</td>
                        <td>@item.TwitterUrl</td>
                        <td>@item.InstagramUrl</td>
                        <td>@item.LinkedinUrl</td>
                       
                      @*   <td>
                            <img src="@item.Imageurl" alt="Etkinlik Görseli" width="80" height="60" style="object-fit: cover;" />
                        </td> *@

                      
                        <td>
                            <a href="@Url.Action("UpdateFooter", "Footer", new { area = "Admin", id = item.Id })"
                               class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil"></i> Güncelle
                            </a>

                            <a href="@Url.Action("DeleteFooter", "Footer", new { area = "Admin", id = item.Id })"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Bu Footerı silmek istediğinize emin misiniz?');">
                                <i class="bi bi-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

