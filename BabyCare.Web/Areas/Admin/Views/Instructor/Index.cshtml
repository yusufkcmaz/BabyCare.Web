@model List<ResultInstructorDto>

@{
    ViewData["Title"] = "Eğitmenler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h3 class="text-center text-primary mb-4">Eğitmen Listesi</h3>

        <table class="table table-hover align-middle">
            <thead class="table-secondary text-center">
                <tr>
                    <th>#</th>
                    <th>Profil Resmi</th>
                    <th>Ad Soyad</th>
                    <th>Unvan</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @{
                    int count = 0;
                }
                @foreach (var instructor in Model)
                {
                    count++;
                    <tr class="shadow-sm">
                        <th class="align-middle">@count</th>
                        <td>
                            <img src="@instructor.ImageUrl" class="rounded-circle border shadow-sm"
                                 style="height: 60px; width: 60px; object-fit: cover;" />
                        </td>
                        <td class="align-middle">@instructor.FirstName @instructor.LastName</td>
                        <td class="align-middle">@instructor.Title</td>
                        <td class="align-middle">
                            <a href="/Admin/Instructor/DeleteInstructor/@instructor.InstructorId"
                               class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Sil
                            </a>
                            <a href="/Admin/Instructor/UpdateInstructor/@instructor.InstructorId"
                               class="btn btn-info btn-sm">
                                <i class="bi bi-pencil-square"></i> Güncelle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-end mt-3">
            <a href="/Admin/Instructor/CreateInstructor" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> Yeni Eğitmen
            </a>
        </div>
    </div>
</div>
