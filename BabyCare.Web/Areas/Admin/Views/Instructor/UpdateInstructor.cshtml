@model UpdateInstructorDto
@{
    ViewData["Title"] = "Eğitmen Güncelle";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h3 class="text-center text-primary mb-4">Eğitmen Bilgilerini Güncelle</h3>

        <form method="post">
            <input type="hidden" asp-for="InstructorId" />
            <div class="text-center mb-3">
                <img id="profilePreview" src="@Model.ImageUrl" class="rounded-circle border shadow"
                     style="width: 120px; height: 120px; object-fit: cover;" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Ad</label>
                <input type="text" asp-for="FirstName" class="form-control" placeholder="Adınızı girin" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Profil Görsel</label>
                <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Görsel Url" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Soyad</label>
                <input type="text" asp-for="LastName" class="form-control" placeholder="Soyadınızı girin" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Unvan</label>
                <input type="text" asp-for="Title" class="form-control" placeholder="Unvanınızı girin" />
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="/Admin/Instructor/Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Geri Dön
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Güncelle
                </button>
            </div>
        </form>
    </div>
</div>
