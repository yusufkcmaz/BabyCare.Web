
@{
    ViewData["Title"] = "Hakkımızda";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

@using BabyCare.Web.Dtos.AboutDto
@model List<ResultAboutDto>
@*
_AboutComponent
*@
<div class="container-fluid py-5 about bg-light">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            @foreach (var item in Model)
            {


                <div class="col-lg-5 wow fadeIn" data-wow-delay="0.1s">
                    <div class="video border">
                        <button type="button" class="btn btn-play" data-bs-toggle="modal" data-src="@item.VideoUrl" data-bs-target="#videoModal">
                            <span></span>
                        </button>
                    </div>
                </div>
                <div class="col-lg-7 wow fadeIn" data-wow-delay="0.3s">
                    <h4 class="text-primary mb-4 border-bottom border-primary border-2 d-inline-block p-2 title-border-radius">Hakkımızda</h4>
                    <h1 class="text-dark mb-4 display-5">@item.Title</h1>
                    <p class="text-dark mb-4">
                        @item.Description
                    </p>
                    <div class="row mb-4">
                        <div class="col-lg-6">
                            <h6 class="mb-3"><i class="fas fa-check-circle me-2"></i>@item.Titles1</h6>
                            <h6 class="mb-3"><i class="fas fa-check-circle me-2 text-primary">@item.Titles2</i></h6>
                            <h6 class="mb-3"><i class="fas fa-check-circle me-2 text-secondary"></i>@item.Titles3</h6>
                        </div>
                        <div class="col-lg-6">
                            <h6 class="mb-3"><i class="fas fa-check-circle me-2"></i>@item.Titles4</h6>
                            <h6 class="mb-3"><i class="fas fa-check-circle me-2 text-primary"></i>@item.Titles5</h6>
                            <h6><i class="fas fa-check-circle me-2 text-secondary"></i>@item.Titles6</h6>
                        </div>
                    </div>
                    <a href="" class="btn btn-primary px-5 py-3 btn-border-radius">Detaylar</a>
                </div>
            }
        </div>
    </div>
</div>


