@using BabyCare.Web.Dtos.ProductDtos
@model List<ResultProductDto>
@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Views/Shared/_UILayout.cshtml";

}


@*
_ProgramComponent
*@
<div class="container-fluid program  py-5">
    <div class="container py-5">
        <div class="mx-auto text-center wow fadeIn" data-wow-delay="0.1s" style="max-width: 700px;">
            <h4 class="text-primary mb-4 border-bottom border-primary border-2 d-inline-block p-2 title-border-radius">Programlarımız</h4>
            <h1 class="mb-5 display-3">Çocuklarınız İçin en iyi eğitimler</h1>
        </div>
        <div class="row g-5 justify-content-center">
            @foreach(var item in Model)
            {
                
          
            <div class="col-md-6 col-lg-6 col-xl-4 wow fadeIn" data-wow-delay="0.1s">
                <div class="program-item rounded">
                    <div class="program-img position-relative">
                        <div class="overflow-hidden img-border-radius">
                            <img src="@item.ImageUrl" class="img-fluid w-100" alt="Image">
                        </div>
                        <div class="px-4 py-2 bg-primary text-white program-rate">@item.Price ₺</div>
                    </div>
                    <div class="program-text bg-white px-4 pb-3">
                        <div class="program-text-inner">
                            <a href="#" class="h4">@item.Title</a>
                            <p class="mt-3 mb-0">@item.Description</p>
                        </div>
                    </div>
                    <div class="program-teacher d-flex align-items-center border-top border-primary bg-white px-4 py-3">
                            <img src="@item.InstructorImage" class="img-fluid rounded-circle p-2 border border-primary bg-white" alt="Image" style="width: 70px; height: 70px;">
                        <div class="ms-3">
                            <h6 class="mb-0 text-primary">@item.InstructorName</h6>
                        </div>
                    </div>
                 @*     <div class="d-flex justify-content-between px-4 py-2 bg-primary rounded-bottom"> 
                        <small class="text-white"><i class="fas fa-wheelchair me-1"></i> 30 Sits</small>
                        <small class="text-white"><i class="fas fa-book me-1"></i> 11 Lessons</small>
                        <small class="text-white"><i class="fas fa-clock me-1"></i> 60 Hours</small>
                    </div> *@
                </div>
            </div>
            }
        
        </div>
    </div>
</div>
